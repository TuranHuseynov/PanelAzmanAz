@model IEnumerable<PanelWork.Models.Mehsul>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Sekil
        </th>
        <th>
            Ad
        </th>
        <th>
            Qiymet
        </th>
        <th>
            Sayt linki
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/MyUpload/@item.mehsulun_sekli" style="width:100px; height:100px;" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mehsulun_adi)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.mehsul_price)
        </td>
        <td>
            <a href="@item.mehsulun_linki">@item.mehsulun_linki</a>
        </td>

        <td>
            @Html.ActionLink("Duzelt", "Edit", new { id = item.mehsul_id }) |
            @Html.ActionLink("Bax", "Details", new { id = item.mehsul_id }) |
            @Html.ActionLink("Sil", "Delete", new { id = item.mehsul_id })
        </td>
    </tr>
}

</table>
